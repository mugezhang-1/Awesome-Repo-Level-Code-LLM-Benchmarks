{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Repo-level Code LLM Benchmark",
  "type": "object",
  "required": ["name", "year", "langs", "tasks", "runner"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "year": { "type": "integer", "minimum": 2000 },
    "paper": { "type": "string", "format": "uri" },
    "code": { "type": "string", "format": "uri" },
    "dataset": { "type": "string", "format": "uri" },
    "langs": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "tasks": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "runner": { "type": "string", "enum": ["exec", "proxy", "mixed"] },
    "size": {
      "type": "object",
      "properties": {
        "repos": { "type": "integer", "minimum": 0 },
        "tasks": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "license": { "type": "string" },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}

